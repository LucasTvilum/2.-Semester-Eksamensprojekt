@inherits LayoutComponentBase

<div class="app-layout">
    <NavMenu IsOpen="@isNavOpen" />

    <div class="main-area">
        <TopBar OnToggleMenu="ToggleMenu" />

        <main class="content">
            @Body
        </main>
    </div>
</div>

@code {
    private bool isNavOpen = false;

    void ToggleMenu()
    {
        isNavOpen = !isNavOpen;
    }
}