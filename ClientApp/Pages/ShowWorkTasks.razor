@page "/ShowWorkTasks"
@using ClientApp.Service
@using Core.Models
@inject UserState userState
@inject IWorkTask workTaskService
@inject IBooking bookingService
@inject IUser userService

<h3>Alle arbejdsopgaver (WorkTasks)</h3>

@if (!userState.IsWorker)
{
    <p>You are not allowed here. (not a worker)</p>
}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Dato</th>
            <th>Inside Job</th>
            <th>Vinduer</th>
            <th>Notes</th>
            <th>Worker</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @if (taskList != null)
        {
            @foreach (var t in taskList)
            {
                <tr>
                    <td>@t.Date.ToShortDateString()</td>
                    <td>@(t.InsideJob ? "Ja" : "Nej")</td>
                    <td>@t.Windows.Count</td>
                    <td>@t.NotesForTask</td>
                    <td>@t.Worker.Name</td>

                    <td>
                        <button class="btn btn-sm btn-primary"
                                @onclick="() => OpenTaskWindows(t)">
                            Vis Vinduer
                        </button>

                        <button class="btn btn-sm btn-warning"
                                @onclick="() => OpenEditTask(t)">
                            Rediger
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


<!-- -------------------- WINDOWS MODAL -------------------- -->

@if (showWindowsModal)
{
    <div class="modal d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5>Vinduer</h5>
                    <button class="btn-close" @onclick="CloseTaskWindows"></button>
                </div>

                <div class="modal-body">
                    @if (selectedTask.Windows != null)
                    {
                        <ul>
                            @foreach (var w in selectedTask.Windows)
                            {
                                <li>@w.Type.Name – @w.Location.Name</li>
                            }
                        </ul>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseTaskWindows">Close</button>
                </div>

            </div>
        </div>
    </div>
}

<!-- -------------------- EDIT TASK MODAL -------------------- -->

@if (showEditModal)
{
    <div class="modal d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5>Rediger WorkTask</h5>
                    <button class="btn-close" @onclick="CloseEditTask"></button>
                </div>

                <div class="modal-body">

                    <div class="mb-3">
                        <label>Inside Job</label>
                        <InputCheckbox @bind-Value="editInsideJob" />
                    </div>

                    <div class="mb-3">
                        <label>Notes</label>
                        <InputTextArea class="form-control" @bind-Value="editNotes" />
                    </div>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-success" @onclick="SaveEditedTask">Gem ændringer</button>
                    <button class="btn btn-secondary" @onclick="CloseEditTask">Luk</button>
                </div>

            </div>
        </div>
    </div>
}


@code {
    private List<WorkTask> taskList = new();
    private WorkTask selectedTask;

    private bool showWindowsModal = false;
    private bool showEditModal = false;

    // Edit fields
    private bool editInsideJob;
    private string editNotes;

    protected override async Task OnInitializedAsync()
    {
        taskList = (await workTaskService.GetAll()).ToList();
    }

    private void OpenTaskWindows(WorkTask task)
    {
        selectedTask = task;
        showWindowsModal = true;
    }

    private void CloseTaskWindows()
    {
        showWindowsModal = false;
    }

    private void OpenEditTask(WorkTask task)
    {
        selectedTask = task;

        // Copy fields into edit variables
        editInsideJob = task.InsideJob;
        editNotes = task.NotesForTask;

        showEditModal = true;
    }

    private void CloseEditTask()
    {
        showEditModal = false;
    }

    private async Task SaveEditedTask()
    {
        selectedTask.InsideJob = editInsideJob;
        selectedTask.NotesForTask = editNotes;

        await workTaskService.UpdateWorkTask(selectedTask);

        showEditModal = false;
    }
}
