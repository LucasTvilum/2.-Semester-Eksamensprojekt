@page "/ShowWorkTasks"
@using ClientApp.Components
@using ClientApp.Service
@using Core.Models
@inject UserState userState
@inject IWorkTask workTaskService
@inject IBooking bookingService
@inject IWindow windowService
@inject IUser userService
@inject NavigationManager nav

<div class="page-wrapper worktasks-page">

<div class="page-header">
    <h1 class="page-title">Arbejdsopgaver</h1>
    <p class="page-subtitle">
        Vælg en dato i kalenderen for at se opgaver – eller få overblik over kommende arbejde
    </p>
</div>


<div class="calendar-card">
    <ShowTaskKalenderKomponent
        TaskDates="taskDates"
        OnDateSelected="HandleDateSelected" />
</div>



@if (!userState.IsWorker)
{
    <p>Kun for medarbejdere</p>
}

<div class="section-card">
    <h2 class="section-title">Opgaver for valgt dato</h2>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
        <tr>
            <th>Dato</th>
            <th>Inside Job</th>
            <th>Vinduer</th>
            <th>Notes</th>
            <th>Worker</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @if (FilteredTasks.Any())
        {
            @foreach (var t in FilteredTasks)
            {
                <tr>
                    <td>@t.Date.ToShortDateString()</td>
                    <td>@(t.InsideJob ? "Ja" : "Nej")</td>
                    <td>@(bookinglist.FirstOrDefault(b => b.Id == t.BookingId)?.Windows?.Count ?? 0)</td>
                    <td>@(bookinglist.FirstOrDefault(b => b.Id == t.BookingId)?.NotesWindowCleaner ?? "—")</td>
                    <td>@(workerlist.FirstOrDefault(w => w.Id == t.WorkerId)?.Name ?? "Ukendt medarbejder")</td>
                    <td>@t.Status</td>
                    <td>
                        <button class="btn btn-sm btn-primary"
                                @onclick="() => OpenTaskWindows(t)">Vis Vinduer</button>
                        <button class="btn btn-sm btn-warning"
                                @onclick="() => OpenEditTask(t)">Rediger</button>
                        <button class="btn btn-sm btn-info"
                                @onclick="() => ShowCustomerForTask(t)">Kundeinfo</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">Ingen opgaver for denne dato</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="section-card">
    <h2 class="section-title">Kommende arbejdsopgaver</h2>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
        <tr>
            <th>Dato</th>
            <th>Inside Job</th>
            <th>Vinduer</th>
            <th>Notes</th>
            <th>Worker</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var t in taskList)
        {
            <tr>
                <td>@t.Date.ToShortDateString()</td>
                <td>@(t.InsideJob ? "Ja" : "Nej")</td>
                <td>@(bookinglist.FirstOrDefault(b => b.Id == t.BookingId)?.Windows?.Count ?? 0)</td>
                <td>@(bookinglist.FirstOrDefault(b => b.Id == t.BookingId)?.NotesWindowCleaner ?? "—")</td>
                <td>@(workerlist.FirstOrDefault(w => w.Id == t.WorkerId)?.Name ?? "Ukendt medarbejder")</td>
                <td>@t.Status</td>
                <td>
                    <button class="btn btn-sm btn-primary"
                            @onclick="() => OpenTaskWindows(t)">Vis Vinduer</button>
                    <button class="btn btn-sm btn-warning"
                            @onclick="() => OpenEditTask(t)">Rediger</button>
                    <button class="btn btn-sm btn-info"
                            @onclick="() => ShowCustomerForTask(t)">Kundeinfo</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<!-- -------------------- WINDOWS MODAL -------------------- -->

@if (showWindowsModal)
{
    <div class="modal d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5>Vinduer</h5>
                    <button class="btn-close" @onclick="CloseTaskWindows"></button>
                </div>

                <div class="modal-body">
                    <WindowSelector booking="selectedBooking" OnWindowsUpdated="CloseTaskWindows"></WindowSelector>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseTaskWindows">
                        Luk
                    </button>
                </div>
            </div>
        </div>
    </div>
    
}


<!-- -------------------- EDIT TASK MODAL -------------------- -->

@if (showEditModal)
{
    <div class="modal d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5>Rediger Booking & Status</h5>
                    <button class="btn-close" @onclick="CloseEditTask"></button>
                </div>

                <div class="modal-body">

                    <div class="mb-3">
                        <label>Notes fra Booking</label>
                        <InputTextArea class="form-control" @bind-Value="editBookingNotes" />
                    </div>

                    <div class="mb-3">
                        <label>Status</label>
                        <InputSelect class="form-select" @bind-Value="editStatus">
                            <option value="">Vælg status</option>
                            <option value="Pending">Afventer</option>
                            <option value="InProgress">I gang</option>
                            <option value="Completed">Færdig</option>
                            <option value="Cancelled">Annulleret</option>
                        </InputSelect>
                    </div>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-success" @onclick="SaveEditedTask">Gem ændringer</button>
                    <button class="btn btn-secondary" @onclick="CloseEditTask">Luk</button>
                </div>

            </div>
        </div>
    </div>
}


<!-- -------------------- CUSTOMER MODAL -------------------- -->

@if (showCustomerModal)
{
    <div class="modal d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5>Kundeinformation</h5>
                    <button class="btn-close" @onclick="CloseCustomerModal"></button>
                </div>

                <div class="modal-body">
                    @if (customer != null)
                    {
                        <p><b>Navn:</b> @customer.Name</p>
                        <p><b>Email:</b> @customer.Mail</p>
                        <p><b>Telefon:</b> @customer.PhoneNumber</p>
                        <p><b>Adresse:</b> @customer.Address</p>
                        <p><b>By:</b> @customer.City</p>
                        <p><b>Region:</b> @customer.Region</p>
                    }
                    else
                    {
                        <p>Kunde ikke fundet.</p>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseCustomerModal">Luk</button>
                </div>

            </div>
        </div>
    </div>
}



@code {
    private List<DateTime> taskDates = new();
    private List<WorkTask> taskList = new();
    private List<Customer> customerlist = new();
    private List<Booking> bookinglist = new();
    private List<Worker> workerlist = new();

    private Booking selectedBooking;
    private WorkTask selectedTask;
    private bool showWindowsModal = false;
    private bool showEditModal = false;
    private bool showCustomerModal = false;
    private Customer customer;

    private bool editInsideJob;
    private string editNotes;
    private string editStatus;
    private string editBookingNotes;

    private string newWindowTypeId;
    private string newWindowLocationId;

    private void ShowCustomerForTask(WorkTask task)
    {
        // 1. Find booking based on BookingId
        var booking = bookinglist.FirstOrDefault(b => b.Id == task.BookingId);

        if (booking == null)
        {
            Console.WriteLine("Booking not found for task");
            customer = null;
            showCustomerModal = true;
            return;
        }

        // 2. Find customer based on CustomerId from booking
        customer = customerlist.FirstOrDefault(c => c.Id == booking.CustomerId);

        showCustomerModal = true;
    }


    private DateTime? selectedDate;
    private List<WorkTask> FilteredTasks = new List<WorkTask>();

    protected override async Task OnInitializedAsync()
    {
        if (userState.CurrentUser?.Usertype != User.UserType.Worker)
        {
            nav.NavigateTo("/notallowed", true);
        }

        workerlist = (await userService.GetWorkers());
        customerlist = (await userService.GetCustomers()).ToList();
        bookinglist = (await bookingService.GetAll()).ToList();
        taskList = (await workTaskService.GetAll()).ToList();
        taskDates = taskList.Select(t => t.Date).ToList();
    }
    
    private void FilterTasksByDate(DateTime? date)
    {
        if (date.HasValue)
        {
            FilteredTasks = taskList
                .Where(t => t.Date.Date == date.Value.Date)
                .ToList();
        }
        else
        {
            FilteredTasks = new List<WorkTask>();
        }
    }

    private void HandleDateSelected(DateTime date)
    {
        selectedDate = date;
        Console.WriteLine(selectedDate);
        FilterTasksByDate(selectedDate);
    }

    private void OpenTaskWindows(WorkTask task)
    {
        selectedTask = task;
        selectedBooking = bookinglist.FirstOrDefault(b => b.Id == task.BookingId);
        
        if (selectedBooking != null){
        Console.WriteLine("worktask window modal booking id: " + selectedBooking.Id);
        }
        if (selectedBooking == null)
            Console.WriteLine("Booking not found for windows modal.");

        showWindowsModal = true;
    }

    private void CloseTaskWindows()
    {
        showWindowsModal = false;
    }

    private void OpenEditTask(WorkTask task)
    {
        selectedTask = task;

        var booking = bookinglist.FirstOrDefault(b => b.Id == task.BookingId);
        editBookingNotes = booking?.NotesWindowCleaner;

        editStatus = task.Status;

        showEditModal = true;
    }


    private void CloseEditTask()
    {
        showEditModal = false;
    }

    private async Task SaveEditedTask()
    {
        // save task status
        selectedTask.Status = editStatus;
        await workTaskService.UpdateWorkTask(selectedTask);

        // save booking notes by finding first matching booking and updating with new note
        var booking = bookinglist.FirstOrDefault(b => b.Id == selectedTask.BookingId);
        if (booking != null)
        {
            booking.NotesWindowCleaner = editBookingNotes;
            await bookingService.UpdateBooking(booking);
        }

        showEditModal = false;
    }

    private void CloseCustomerModal()
    {
        showCustomerModal = false;
    }

}
</div>