@page "/ShowBookingTEMP"
@using ClientApp.Service
@using Core.Models
@inject UserState userState
@inject IWorkTask workTaskService
@inject IBooking bookingService
@inject IWindow windowService

<div class="page">

    <!-- PAGE HEADER -->
    <div class="page-header">
        <h1 class="page-title">Alle bookings</h1>
        <p class="page-subtitle">
            Oversigt over alle kundebookinger og deres status
        </p>
    </div>

    <!-- PAGE CONTENT -->
    <div class="page-content">

        @if (!userState.IsWorker)
        {
            <p>Kun for medarbejdere</p>
        }
        else
        {
            <div class="table-wrapper">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Dag</th>
                            <th>Inde interval</th>
                            <th>Inde job</th>
                            <th>Kundenote</th>
                            <th>Vinduespudser note</th>
                            <th>Ude interval</th>
                            <th>Pris</th>
                            <th>Status</th>
                            <th>Vinduer</th>
                            <th>Handling</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in bookinglist)
                        {
                            <tr>
                                <td>@booking.TypeBooking</td>
                                <td>@booking.Day</td>
                                <td>@booking.InsideInterval</td>
                                <td>@(booking.InsideJob ? "Ja" : "Nej")</td>
                                <td>@booking.NotesCustomer</td>
                                <td>@booking.NotesWindowCleaner</td>
                                <td>@booking.OutdoorInterval</td>
                                <td>@booking.Price kr</td>

                                <td>
                                    <span class="status-badge status-@booking.Status.ToLower()">
                                        @booking.Status
                                    </span>
                                </td>

                                <td>
                                    <button class="btn btn-primary btn-sm"
                                            @onclick="() => OpenModalWindows(booking)">
                                        Vis vinduer
                                    </button>
                                </td>

                                <td>
                                    <button class="btn btn-outline-primary btn-sm"
                                            @onclick="() => OpenModalBooking(booking)">
                                        Ændr status
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- MODAL: WINDOWS -->
        @if (showModalWindows)
        {
            <div class="modal d-block modal-overlay">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h5>Vinduer</h5>
                            <button class="btn-close" @onclick="CloseModalWindows"></button>
                        </div>

                        <div class="modal-body">
                            @if (selectedBooking.Windows?.Any() == true)
                            {
                                <ul class="list-group mb-3">
                                    @foreach (var window in selectedBooking.Windows)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @window.Type.Name – @window.Location.Name
                                            <button class="btn btn-danger btn-sm"
                                                    @onclick="() => DeleteWindow(window)">
                                                Slet
                                            </button>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">Ingen vinduer tilføjet</p>
                            }

                            <hr />

                            <h6>Tilføj vindue</h6>

                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <label>Type</label>
                                    <InputSelect class="form-select" @bind-Value="newWindowTypeId">
                                        <option value="">Vælg type</option>
                                        @foreach (var t in windowtypecategories)
                                        {
                                            <option value="@t.Id">@t.Name</option>
                                        }
                                    </InputSelect>
                                </div>

                                <div class="col-md-6 mb-2">
                                    <label>Lokation</label>
                                    <InputSelect class="form-select" @bind-Value="newWindowLocationId">
                                        <option value="">Vælg lokation</option>
                                        @foreach (var l in windowlocationcategories)
                                        {
                                            <option value="@l.Id">@l.Name</option>
                                        }
                                    </InputSelect>
                                </div>
                            </div>

                            <button class="btn btn-success mt-2" @onclick="AddWindow">
                                Tilføj vindue
                            </button>
                        </div>

                        <div class="modal-footer">
                            <button class="btn btn-secondary" @onclick="CloseModalWindows">Luk</button>
                            <button class="btn btn-primary" @onclick="SaveWindows">Gem</button>
                        </div>

                    </div>
                </div>
            </div>
        }

        <!-- MODAL: STATUS -->
        @if (showModalBooking)
        {
            <div class="modal d-block modal-overlay">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h5>Ændr bookingstatus</h5>
                            <button class="btn-close" @onclick="CloseModalBooking"></button>
                        </div>

                        <div class="modal-body">
                            <label>Status</label>
                            <InputSelect class="form-select" @bind-Value="selectedstatus">
                                @foreach (var s in statuscategories)
                                {
                                    <option value="@s">@s</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="modal-footer">
                            <button class="btn btn-secondary" @onclick="CloseModalBooking">Annuller</button>
                            <button class="btn btn-success" @onclick="CloseModalBookingStatusUpdate">Gem</button>
                        </div>

                    </div>
                </div>
            </div>
        }

    </div> <!-- page-content -->

</div> <!-- page -->

@code {
    private List<Booking> bookinglist = new();
    private Booking selectedBooking;

    private bool showModalWindows = false;
    private bool showModalBooking = false;

    private string newWindowTypeId;
    private string newWindowLocationId;
    private string selectedstatus;

    private List<WindowType> windowtypecategories = new();
    private List<WindowLocation> windowlocationcategories = new();
    private List<string> statuscategories = new() { "Godkendt", "Afventer", "Afvist", "Aktiv" };

    protected override async Task OnInitializedAsync()
    {
        bookinglist = (await bookingService.GetAll()).ToList();
        windowtypecategories = await windowService.GetAllWindowTypes();
        windowlocationcategories = await windowService.GetAllWindowLocations();
    }

    private void OpenModalWindows(Booking booking)
    {
        selectedBooking = booking;
        showModalWindows = true;
    }

    private void CloseModalWindows() => showModalWindows = false;

    private void OpenModalBooking(Booking booking)
    {
        selectedBooking = booking;
        selectedstatus = booking.Status;
        showModalBooking = true;
    }

    private void CloseModalBooking() => showModalBooking = false;

    private async Task CloseModalBookingStatusUpdate()
    {
        selectedBooking.Status = selectedstatus;
        await bookingService.UpdateBooking(selectedBooking);
        showModalBooking = false;
    }

    private void AddWindow()
    {
        var type = windowtypecategories.FirstOrDefault(t => t.Id == newWindowTypeId);
        var loc = windowlocationcategories.FirstOrDefault(l => l.Id == newWindowLocationId);

        if (type != null && loc != null)
        {
            selectedBooking.Windows ??= new();
            selectedBooking.Windows.Add(new Window { Type = type, Location = loc });
        }
    }

    private void DeleteWindow(Window window)
    {
        selectedBooking.Windows.Remove(window);
    }

    private async Task SaveWindows()
    {
        await bookingService.UpdateBooking(selectedBooking);
        showModalWindows = false;
    }
}